<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_margin="?android:attr/listPreferredItemPaddingStart"

>

    <TextView
        android:id="@+id/property_id"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/property_id"
        android:gravity="right"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:id="@+id/address_label"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/property_address"/>
        <TextView
            android:id="@+id/property_address"
            style="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:text="Address 1"
            android:layout_below="@+id/address_label"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</RelativeLayout>